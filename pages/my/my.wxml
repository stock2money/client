<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo}}" open-type="onload" bindgetuserinfo="onload"> 获取头像昵称 </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{hasUserInfo?'Hi,':''}}{{userInfo.nickName}}</text>
    </block>
  </view>
</view>
